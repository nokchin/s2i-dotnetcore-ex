@page 
@{
    var name = string.Empty;
    if (Request.HasFormContentType)
    {
        name = Request.Form["name"];
    }
}


    <form method="post">
        <div>Name: <input type="text" name="name" /></div>
        <div><input type="submit" value=" Press " /></div>
    </form>

<div>
    @if (!string.IsNullOrEmpty(name))
    {
        <p>Hello @name!</p>
    }
</div>